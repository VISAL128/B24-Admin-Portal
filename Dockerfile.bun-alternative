# Alternative Dockerfile for Bun with Web Crypto support
FROM oven/bun:1.1.27-slim

# Install Node.js for better Web Crypto API support
RUN apt-get update && apt-get install -y nodejs && apt-get clean

WORKDIR /app
COPY .output .output

# Use Node.js with Web Crypto flags
CMD [ "node", "--experimental-global-webcrypto", ".output/server/index.mjs" ]
