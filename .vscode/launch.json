{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "urlFilter": "*://localhost:3000*",
      "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe", // Adjust for macOS/Linux
      "userDataDir": "${workspaceFolder}/.chrome-dev-profile"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "outputCapture": "std",
      "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
      "args": ["dev"]
    }
  ],
  "compounds": [
    {
      "name": "fullstack: nuxt",
      "urlFilter": "*://localhost:3000/digital-wallet*",
      "configurations": ["server: nuxt", "client: chrome"]
    }
  ]
}
